@model MSCloudView.Models.Athlete

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Athlete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAthlete" />
            <div class="form-group">
                <label asp-for="AthleteName" class="control-label"></label>
                <input asp-for="AthleteName" class="form-control" />
                <span asp-validation-for="AthleteName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCountry" class="control-label">Country</label>
                <select asp-for="IdCountry" class="form-control" asp-items="ViewBag.IdCountry"></select>
                <span asp-validation-for="IdCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
